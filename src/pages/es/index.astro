---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const lang = 'es';
const t = useTranslations(lang);

const pageTitle = "Nature's Essence - Premium Natural Wellness Products";
const pageDescription = t('hero.subtitle');
---

<BaseLayout title={pageTitle} description={pageDescription} lang={lang}>
  <Header t={t} lang={lang} />
  <main>
    <!-- Hero Section -->
    <section class="hero" id="home">
      <div class="hero-background"></div>
      <div class="hero-overlay"></div>
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title fade-in">{t('hero.title')}</h1>
          <p class="hero-subtitle fade-in">{t('hero.subtitle')}</p>
          <div class="hero-buttons fade-in">
            <a href="#products" class="btn btn-primary">{t('hero.exploreBtn')}</a>
            <a href="#contact" class="btn btn-outline">{t('hero.contactBtn')}</a>
          </div>
        </div>
      </div>
      <div class="scroll-indicator">
        <span></span>
      </div>
    </section>

    <!-- About Section -->
    <section class="about" id="about">
      <div class="container">
        <div class="about-header text-center">
          <h2>{t('about.title')}</h2>
          <p class="section-subtitle">{t('about.subtitle')}</p>
        </div>
        
        <div class="about-content">
          <div class="about-text">
            <h3>{t('about.heading')}</h3>
            <p>{t('about.paragraph1')}</p>
            <p>{t('about.paragraph2')}</p>
            <div class="about-stats">
              <div class="stat">
                <span class="stat-number">10+</span>
                <span class="stat-label">{t('about.stats.years')}</span>
              </div>
              <div class="stat">
                <span class="stat-number">500+</span>
                <span class="stat-label">{t('about.stats.products')}</span>
              </div>
              <div class="stat">
                <span class="stat-number">50+</span>
                <span class="stat-label">{t('about.stats.countries')}</span>
              </div>
            </div>
          </div>
          
          <div class="about-features">
            <div class="feature-card">
              <div class="feature-icon">üå±</div>
              <h4>{t('about.features.natural.title')}</h4>
              <p>{t('about.features.natural.description')}</p>
            </div>
            
            <div class="feature-card">
              <div class="feature-icon">üåç</div>
              <h4>{t('about.features.sustainable.title')}</h4>
              <p>{t('about.features.sustainable.description')}</p>
            </div>
            
            <div class="feature-card">
              <div class="feature-icon">‚ú®</div>
              <h4>{t('about.features.quality.title')}</h4>
              <p>{t('about.features.quality.description')}</p>
            </div>
            
            <div class="feature-card">
              <div class="feature-icon">üíö</div>
              <h4>{t('about.features.eco.title')}</h4>
              <p>{t('about.features.eco.description')}</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Products Section -->
    <section class="products" id="products">
      <div class="container">
        <div class="products-header text-center">
          <h2>{t('products.title')}</h2>
          <p class="section-subtitle">{t('products.subtitle')}</p>
        </div>
        
        <div class="products-grid">
          <div class="product-card">
            <div class="product-image">
              <img src="https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?w=600&q=80" alt={t('products.categories.food.title')} />
              <div class="product-overlay">
                <a href="#contact" class="btn btn-primary">{t('products.learnMore')}</a>
              </div>
            </div>
            <div class="product-content">
              <h3>{t('products.categories.food.title')}</h3>
              <p>{t('products.categories.food.description')}</p>
              <ul class="product-features">
                {t('products.categories.food.features').map((feature: string) => (
                  <li>‚úì {feature}</li>
                ))}
              </ul>
            </div>
          </div>
          
          <div class="product-card">
            <div class="product-image">
              <img src="https://images.unsplash.com/photo-1608571423902-eed4a5ad8108?w=600&q=80" alt={t('products.categories.oils.title')} />
              <div class="product-overlay">
                <a href="#contact" class="btn btn-primary">{t('products.learnMore')}</a>
              </div>
            </div>
            <div class="product-content">
              <h3>{t('products.categories.oils.title')}</h3>
              <p>{t('products.categories.oils.description')}</p>
              <ul class="product-features">
                {t('products.categories.oils.features').map((feature: string) => (
                  <li>‚úì {feature}</li>
                ))}
              </ul>
            </div>
          </div>
          
          <div class="product-card">
            <div class="product-image">
              <img src="https://images.unsplash.com/photo-1556228578-0d85b1a4d571?w=600&q=80" alt={t('products.categories.beauty.title')} />
              <div class="product-overlay">
                <a href="#contact" class="btn btn-primary">{t('products.learnMore')}</a>
              </div>
            </div>
            <div class="product-content">
              <h3>{t('products.categories.beauty.title')}</h3>
              <p>{t('products.categories.beauty.description')}</p>
              <ul class="product-features">
                {t('products.categories.beauty.features').map((feature: string) => (
                  <li>‚úì {feature}</li>
                ))}
              </ul>
            </div>
          </div>
          
          <div class="product-card">
            <div class="product-image">
              <img src="https://images.unsplash.com/photo-1600334129128-685c5582fd35?w=600&q=80" alt={t('products.categories.wellness.title')} />
              <div class="product-overlay">
                <a href="#contact" class="btn btn-primary">{t('products.learnMore')}</a>
              </div>
            </div>
            <div class="product-content">
              <h3>{t('products.categories.wellness.title')}</h3>
              <p>{t('products.categories.wellness.description')}</p>
              <ul class="product-features">
                {t('products.categories.wellness.features').map((feature: string) => (
                  <li>‚úì {feature}</li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials" id="testimonials">
      <div class="container">
        <div class="testimonials-header text-center">
          <h2>{t('testimonials.title')}</h2>
          <p class="section-subtitle">{t('testimonials.subtitle')}</p>
        </div>
        
        <div class="testimonials-grid">
          {t('testimonials.reviews').map((review: any, index: number) => (
            <div class="testimonial-card">
              <div class="stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</div>
              <p class="testimonial-text">{review.text}</p>
              <div class="testimonial-author">
                <img src={`https://i.pravatar.cc/150?img=${[1, 13, 5, 33, 9, 14][index]}`} alt={review.name} />
                <div class="author-info">
                  <h4>{review.name}</h4>
                  <p>{review.role}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="contact" id="contact">
      <div class="container">
        <div class="contact-header text-center">
          <h2>{t('contact.title')}</h2>
          <p class="section-subtitle">{t('contact.subtitle')}</p>
        </div>
        
        <div class="contact-content">
          <div class="contact-form-wrapper">
            <form class="contact-form" id="contact-form">
              <div class="form-group">
                <label for="name">{t('contact.form.name')} {t('contact.form.required')}</label>
                <input type="text" id="name" name="name" required placeholder={t('contact.form.namePlaceholder')} />
              </div>
              
              <div class="form-group">
                <label for="email">{t('contact.form.email')} {t('contact.form.required')}</label>
                <input type="email" id="email" name="email" required placeholder={t('contact.form.emailPlaceholder')} />
              </div>
              
              <div class="form-group">
                <label for="phone">{t('contact.form.phone')}</label>
                <input type="tel" id="phone" name="phone" placeholder={t('contact.form.phonePlaceholder')} />
              </div>
              
              <div class="form-group">
                <label for="subject">{t('contact.form.subject')} {t('contact.form.required')}</label>
                <input type="text" id="subject" name="subject" required placeholder={t('contact.form.subjectPlaceholder')} />
              </div>
              
              <div class="form-group">
                <label for="message">{t('contact.form.message')} {t('contact.form.required')}</label>
                <textarea id="message" name="message" required placeholder={t('contact.form.messagePlaceholder')}></textarea>
              </div>
              
              <div class="recaptcha-notice">
                <small>üîí {t('contact.form.captchaProtected')}</small>
              </div>
              
              <button type="submit" class="btn btn-primary">{t('contact.form.submit')}</button>
            </form>
          </div>
          
          <div class="contact-info">
            <div class="info-card">
              <div class="info-icon">üìç</div>
              <h4>{t('contact.info.visit.title')}</h4>
              <p set:html={t('contact.info.visit.address').replace(/\n/g, '<br/>')}></p>
            </div>
            
            <div class="info-card">
              <div class="info-icon">üìß</div>
              <h4>{t('contact.info.email.title')}</h4>
              <p><a href="mailto:hello@naturesessence.com">hello@naturesessence.com</a><br/><a href="mailto:support@naturesessence.com">support@naturesessence.com</a></p>
            </div>
            
            <div class="info-card">
              <div class="info-icon">üìû</div>
              <h4>{t('contact.info.call.title')}</h4>
              <p><a href="tel:+15551234567">+1 (555) 123-4567</a><br/>{t('contact.info.call.hours')}</p>
            </div>
            
            <div class="info-card">
              <div class="info-icon">‚è∞</div>
              <h4>{t('contact.info.hours.title')}</h4>
              <p set:html={t('contact.info.hours.schedule').replace(/\n/g, '<br/>')}></p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <Footer t={t} lang={lang} />
  </main>
</BaseLayout>

<style>
  
  /* Hero Section Styles */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-top: 80px;
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
    background-image: url('https://images.unsplash.com/photo-1490645935967-10de6ba17061?w=1920&q=80');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    z-index: -2;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(45, 95, 63, 0.85) 0%, rgba(139, 157, 119, 0.75) 100%);
    z-index: -1;
  }
  
  .hero-content {
    text-align: center;
    color: var(--color-white);
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .hero-title {
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    animation-delay: 0.2s;
  }
  
  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.4rem);
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: var(--spacing-lg);
    line-height: 1.8;
    animation-delay: 0.4s;
  }
  
  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    animation-delay: 0.6s;
  }
  
  .hero-buttons .btn-outline {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-white);
    color: var(--color-white);
    backdrop-filter: blur(10px);
  }
  
  .hero-buttons .btn-outline:hover {
    background: var(--color-white);
    color: var(--color-primary);
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 50px;
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 20px;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }
  
  .scroll-indicator span {
    width: 6px;
    height: 10px;
    background: var(--color-white);
    border-radius: 3px;
    animation: scroll 2s infinite;
  }
  
  @keyframes scroll {
    0%, 100% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateY(15px);
      opacity: 0.5;
    }
  }
  
  /* About Section Styles */
  .about {
    background: var(--color-white);
  }
  
  .about-header {
    margin-bottom: var(--spacing-lg);
  }
  
  .section-subtitle {
    font-size: 1.2rem;
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
    align-items: start;
  }
  
  .about-text h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }
  
  .about-text p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: var(--spacing-md);
  }
  
  .about-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }
  
  .stat {
    text-align: center;
    padding: var(--spacing-md);
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    border-radius: var(--radius-md);
    color: var(--color-white);
  }
  
  .stat-number {
    display: block;
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  
  .stat-label {
    display: block;
    font-size: 0.9rem;
    opacity: 0.9;
  }
  
  .about-features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
  }
  
  .feature-card {
    background: var(--color-background);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    text-align: center;
    transition: all var(--transition-normal);
    border: 2px solid transparent;
  }
  
  .feature-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
  }
  
  .feature-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
  }
  
  .feature-card h4 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
    font-size: 1.2rem;
  }
  
  .feature-card p {
    font-size: 0.95rem;
    margin-bottom: 0;
  }
  
  /* Products Section Styles */
  .products {
    background: var(--color-background);
  }
  
  .products-header {
    margin-bottom: var(--spacing-lg);
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-md);
  }
  
  .product-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
  }
  
  .product-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
  }
  
  .product-image {
    position: relative;
    height: 250px;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .product-card:hover .product-image img {
    transform: scale(1.1);
  }
  
  .product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(45, 95, 63, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }
  
  .product-card:hover .product-overlay {
    opacity: 1;
  }
  
  .product-content {
    padding: var(--spacing-md);
  }
  
  .product-content h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
    font-size: 1.5rem;
  }
  
  .product-content p {
    font-size: 0.95rem;
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
  }
  
  .product-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .product-features li {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    color: var(--color-accent);
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }
  
  /* Testimonials Section Styles */
  .testimonials {
    background: var(--color-white);
  }
  
  .testimonials-header {
    margin-bottom: var(--spacing-lg);
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-md);
  }
  
  .testimonial-card {
    background: var(--color-background);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    border-left: 4px solid var(--color-accent);
    transition: all var(--transition-normal);
    display: flex;
    flex-direction: column;
  }
  
  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
    border-left-color: var(--color-primary);
  }
  
  .stars {
    color: var(--color-secondary);
    font-size: 1.2rem;
    margin-bottom: var(--spacing-sm);
    letter-spacing: 2px;
  }
  
  .testimonial-text {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
    flex-grow: 1;
    font-style: italic;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: auto;
  }
  
  .testimonial-author img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--color-accent);
  }
  
  .author-info h4 {
    font-family: var(--font-heading);
    font-size: 1rem;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }
  
  .author-info p {
    font-size: 0.85rem;
    color: var(--color-text-light);
    margin: 0;
  }
  
  /* Contact Section Styles */
  .contact {
    background: var(--color-background);
  }
  
  .contact-header {
    margin-bottom: var(--spacing-lg);
  }
  
  .contact-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--spacing-lg);
    align-items: start;
  }
  
  .contact-form-wrapper {
    background: var(--color-white);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
  }
  
  .form-group label {
    margin-bottom: var(--spacing-xs);
    font-family: var(--font-heading);
    font-weight: 500;
    color: var(--color-text);
  }
  
  .form-group input,
  .form-group textarea {
    padding: 1rem;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-family: var(--font-body);
    font-size: 1rem;
    transition: all var(--transition-fast);
  }
  
  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(45, 95, 63, 0.1);
  }
  
  .form-group textarea {
    min-height: 150px;
    resize: vertical;
  }
  
  .recaptcha-notice {
    text-align: center;
    padding: 0.5rem;
    background: rgba(45, 95, 63, 0.05);
    border-radius: var(--radius-sm);
    color: var(--color-text-light);
  }
  
  .contact-form .btn {
    margin-top: var(--spacing-sm);
    width: 100%;
  }
  
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .info-card {
    background: var(--color-white);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
  }
  
  .info-card:hover {
    transform: translateX(5px);
    box-shadow: var(--shadow-md);
  }
  
  .info-icon {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-sm);
  }
  
  .info-card h4 {
    color: var(--color-primary);
    font-size: 1.2rem;
    margin-bottom: var(--spacing-sm);
  }
  
  .info-card p {
    font-size: 0.95rem;
    line-height: 1.7;
    margin: 0;
  }
  
  .info-card a {
    color: var(--color-accent);
    transition: color var(--transition-fast);
  }
  
  .info-card a:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }
  
  
  /* Responsive Design */
  @media (max-width: 968px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
    
    .about-stats {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-sm);
    }
    
    .stat {
      padding: var(--spacing-sm);
    }
    
    .stat-number {
      font-size: 2rem;
    }
    
    .contact-content {
